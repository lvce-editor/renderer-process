{
  "name": "@lvce-editor/renderer-process",
  "version": "0.0.0-dev",
  "description": "",
  "main": "src/rendererProcessMain.ts",
  "type": "module",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "lint": "npx xo .",
    "test": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
    "test:watch": "node --unhandled-rejections=warn --experimental-vm-modules ./node_modules/jest/bin/jest.js --watch",
    "type-check": "tsc",
    "build:watch": "nodemon"
  },
  "keywords": [
    "lvce-editor",
    "renderer-process"
  ],
  "author": "Lvce Editor",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/lvce-editor/renderer-process.git"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.24.7",
    "@lvce-editor/verror": "^1.3.0",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@types/jest": "^29.5.12",
    "execa": "^9.3.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.2",
    "rollup": "^4.18.1",
    "ts-jest": "^29.2.0",
    "typescript": "^5.5.3"
  },
  "jest": {
    "injectGlobals": false,
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "modulePathIgnorePatterns": [
      "coverage",
      "dist"
    ],
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    },
    "transform": {
      "^.+\\.tsx?$": [
        "ts-jest",
        {
          "useESM": true
        }
      ]
    },
    "collectCoverage": true,
    "coverageThreshold": {
      "global": {
        "branches": 27,
        "functions": 38,
        "lines": 57,
        "statements": 57
      }
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "printWidth": 150
  },
  "xo": {
    "rules": {
      "unicorn/filename-case": "off",
      "indent": "off",
      "semi": "off",
      "no-unused-vars": "off",
      "unicorn/numeric-separators-style": "off",
      "no-extra-semi": "off",
      "arrow-body-style": "off",
      "padded-blocks": "off",
      "capitalized-comments": "off",
      "padding-line-between-statements": "off",
      "arrow-parens": "off",
      "no-warning-comments": "off",
      "array-bracket-spacing": "off",
      "comma-spacing": "off",
      "unicorn/no-array-callback-reference": "off",
      "comma-dangle": "off",
      "operator-linebreak": "off",
      "no-case-declarations": "off",
      "no-undef": "off",
      "object-curly-spacing": "off",
      "object-shorthand": "off",
      "complexity": "off",
      "no-labels": "off",
      "no-multi-assign": "off",
      "max-params": "off",
      "no-bitwise": "off",
      "unicorn/prefer-math-trunc": "off",
      "no-await-in-loop": "off",
      "unicorn/prefer-add-event-listener": "off",
      "no-unused-expressions": "off",
      "unicorn/better-regex": "off",
      "unicorn/no-array-push-push": "off",
      "unicorn/prevent-abbreviations": "off"
    },
    "ignores": [
      "distmin"
    ]
  },
  "dependencies": {
    "@lvce-editor/assert": "^1.2.0",
    "@lvce-editor/ipc": "^9.3.0",
    "@lvce-editor/json-rpc": "^1.3.0",
    "@lvce-editor/virtual-dom": "^0.3.3",
    "termterm": "^0.5.2"
  },
  "nodemonConfig": {
    "ignore": [
      "**/build/**",
      "**/misc/**",
      "**/playground/**",
      "**/static/**",
      "**/test/**",
      "**/dist/**",
      "**/coverage/**",
      "**/distmin/**",
      "**/scripts/**",
      "**/node_modules/**",
      "**/coverage/**",
      "**/extensions/**",
      "**/renderer-worker/**",
      "**/renderer-process/**",
      "**/extension-host-worker/**"
    ],
    "ext": "ts,js",
    "exec": "node scripts/build.js"
  }
}
